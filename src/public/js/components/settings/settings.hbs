<div class="main">

    <div class="settings-box">
        <p class="settings-header">Настройки</p>
        <div class="settings-table">
            <div class="settings-table-inner">
                <p class="settings-table-inner-left">Имя пользователя:</p>
                <input type="text" id="user-username" class="input-field settings-table-inner-right" placeholder="Имя пользователя" value="{{username}}" readonly>
            </div>
            <div>
                <div class="settings-table-inner">
                    <p class="settings-table-inner-left">email:</p>
                    <input type="text" id="user-email" class="input-field settings-table-inner-right" placeholder="email" value="{{email}}">
                </div>
                <p id="settings-errors-email" class="settings-errors"></p>
            </div>
            <div>
                <div class="settings-table-inner">
                    <p class="settings-table-inner-left">Пароль:</p>
                    <input class="settings-table-inner-right"type="password" id="user-password" placeholder="Пароль">
                </div>
                <div class="settings-table-inner">
                    <p class="settings-table-inner-left">Повторите пароль:</p>
                    <input class="settings-table-inner-right"type="password" id="user-password-repeat" placeholder="Повторите пароль">
                </div>
                <p id="settings-errors-password" class="settings-errors"></p>
            </div>
        </div>

            <button type="button" class="submit-button settings-save-button" id="settings-save-button">Сохранить</button>
        <p id="settings-errors" class="settings-errors"></p>
    </div>

</div>

