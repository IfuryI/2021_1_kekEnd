{{> navbar}}

<div class="main">
    <div class="profile-card">
        <div class="container">
            <div class="avatar-container">
                <img class="avatar" src="{{avatar}}" alt="">
            </div>

            <div class="content">
                <div class="head">
                    <p id="user-full-name" class="user-name">{{username}}</p>
                    <span id="user-email" class="user-email">{{email}}</span>
                    <button id="button-profile-settings" class="settings-button"><a class="settings-link" href="/settings">Настройки</a></button>
                </div>
                <div class="stats">
                    <div class="stats-item">
                        <p class="stats-item-name">Посмотрел фильмов</p>
                        <span id="user-watched-movies-cnt" class="stats-item-value">{{movies_watched}}</span>
                    </div>
                    <div class="stats-item">
                        <p class="stats-item-name">Рецензий</p>
                        <span id="user-reviews-cnt" class="stats-item-value">{{reviews_number}}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h3 class="section-name">Любимые фильмы</h3>

    <!-- TODO: решить проблему источников изображений -->

    <div class="slider">
        {{#each favourite_movies}}
            <div class="slider-card">
                <a href="/movie/{{ inc @index}}"><img src="{{this}}"></a>
            </div>
        {{/each}}
    </div>

    <h3 class="section-name">Любимые актеры</h3>

    <div class="slider">
        {{#each favourite_actors}}
            <div class="slider-card">
                <img src="{{this}}">
            </div>
        {{/each}}
    </div>

    {{#if reviews}}
        <h3 class="section-name">Рецензии</h3>

        <div class="slider">
            {{#each reviews}}
                <div class="slider-review-card">
                    <div class="review-card {{this.review_type}}-review-background">
                        <p class="review-card-title">{{this.title}}</p>
                        <p class="review-card-content">{{this.content}}</p>
                    </div>
                </div>
            {{/each}}
        </div>

    {{/if}}

</div>

