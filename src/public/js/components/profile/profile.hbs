<div class="header">
    <div class="header__section">
        <div class="header__item header-logo">
            <a href="/">КиноПоиск</a>
        </div>
        <div class="header__item header-button">
            <a href="/">Фильмы</a>
        </div>
        <div class="header__item header-button">
            <a href="/">Актеры</a>
        </div>
        <div class="header__item header-button">
            <a href="/">Поиск</a>
        </div>
    </div>
    <div class="header__section">
        {{#if isAuthorized}}
            <div class="header__item header-button">
                <a href="/login">Профиль</a>
            </div>
            <div class="header__item header-button">
                <a href="/login">Выйти</a>
            </div>
        {{else}}
            <div class="header__item header-button">
                <a href="/login">Войти</a>
            </div>
            <div class="header__item header-button">
                <a href="/signup">Регистрация</a>
            </div>
        {{/if}}
    </div>
</div>

<div class="main">
    <div class="profile-card">
        <div class="container">
            <div class="avatar-container">
                <img src="https://i.imgur.com/ZaZ7FP4.jpg" alt="">
            </div>

            <div class="content">
                <div class="head">
                    <p id="user-full-name" class="user-name">{{username}}</p>
                    <span id="user-email" class="user-email">{{email}}</span>
                    <button id="button-profile-settings" class="settings-button">Настройки</button>
                </div>
                <div class="stats">
                    <div class="stats-item">
                        <p class="stats-item-name">Посмотрел фильмов</p>
                        <span id="user-watched-movies-cnt" class="stats-item-value">{{movies_watched}}</span>
                    </div>
                    <div class="stats-item">
                        <p class="stats-item-name">Рецензий</p>
                        <span id="user-reviews-cnt" class="stats-item-value">{{reviews_number}}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h3 class="section-name">Любимые фильмы</h3>

    <!-- TODO: решить проблему источников изображений -->
    <div class="slider">
        {{#each favourite_movies}}
            <div class="slider-card">
                <img src="{{this}}">
            </div>
        {{/each}}
    </div>

    <h3 class="section-name">Любимые актеры</h3>

    <div class="slider">
        {{#each favourite_actors}}
            <div class="slider-card">
                <img src="{{this}}">
            </div>
        {{/each}}
    </div>

    <h3 class="section-name">Рецензии</h3>
</div>
