{{> navbar}}


<div class="main">
    <h3 class="main__section-name">Лучшие фильмы</h3>

    <div class="main__slider-wrapper">
        <div class="main__slider">
            {{#each best_movies}}
                <div class="slider__card">
                    <a href="/movie/{{this.id}}"><img src="{{this.poster}}"></a>
                </div>
            {{/each}}
        </div>
        <div class="main__arrows">
            <button class="fa-button carousel-arrows__arrow carousel-arrows__arrow_left carousel-arrows__arrow_hidden">
                <i class="fa fa-arrow-left fa-3x"></i>
            </button>
            <button class="fa-button carousel-arrows__arrow carousel-arrows__arrow_right">
                <i class="fa fa-arrow-right fa-3x"></i>
            </button>
        </div>
    </div>
    <a class="view-all" href="/movies/best/1">смотреть ТОП-100</a>

    <h3 class="main__section-name">По жанрам</h3>
    <div class="main__genres-selection">
        <div class="main__genres-list">
            {{#each available_genres}}
                <div class="genres-list__item-box">{{this}}</div>
            {{/each}}
            <button id="main-genre-get-preview" class="main__show-button view-all_display_inline button-as-link">
                показать
            </button>
        </div>
    </div>

    {{#if movies_by_genres_preview}}
        <div class="main__slider-wrapper">
            <div class="main__slider">
                {{#each movies_by_genres_preview}}
                    <div class="slider__card">
                        <a href="/movie/{{this.id}}"><img src="{{this.poster}}"></a>
                    </div>
                {{/each}}
            </div>
            <div class="main__arrows">
                <button class="fa-button carousel-arrows__arrow carousel-arrows__arrow_left carousel-arrows__arrow_hidden">
                    <i class="fa fa-arrow-left fa-3x"></i>
                </button>
                <button class="fa-button carousel-arrows__arrow carousel-arrows__arrow_right">
                    <i class="fa fa-arrow-right fa-3x"></i>
                </button>
            </div>
        </div>
        <a href="/movies/genre/1/?filter=" id="main-genre-search-button" class="view-all">смотреть все</a>
    {{else}}
        {{#if (notEq movies_by_genres_preview undefined)}}
            <div class="main__message-empty">
                <p class="message-empty__text">
                    К сожалению, мы не нашли фильмы с таким фильтром!
                </p>
            </div>
        {{/if}}
    {{/if}}
</div>
