<div class="header">
    <div class="header__section">
        <div class="header__item header__logo">
            <a href="/">КиноПоиск</a>
        </div>
        <div class="header__item header__button">
            <a href="/">Фильмы</a>
        </div>
        <div class="header__item header__button">
            <a href="/">Актеры</a>
        </div>
        <div class="header__item header__button">
            <a href="/">Поиск</a>
        </div>
    </div>
    <div class="header__section">
        {{#if isAuthorized}}
            <div class="header__item header__button">
                <a href="/me">Профиль</a>
            </div>
            <div class="header__item header__button">
                <a href="/logout" id="logout-button">Выйти</a>
            </div>
        {{else}}
            <div class="header__item header__button">
                <a href="/login">Войти</a>
            </div>
            <div class="header__item header__button">
                <a href="/signup">Регистрация</a>
            </div>
        {{/if}}
    </div>
</div>


<div class="main">
    <h3 class="main__section-name">Лучшие фильмы</h3>
    <a class="view-all" href="/movies/best/1">смотреть ТОП-100</a>

    <div class="main__slider">
        {{#each best_movies}}
            <div class="slider__card">
                <a href="/movie/{{this.id}}"><img src="{{this.poster}}"></a>
            </div>
        {{/each}}
    </div>

    <h3 class="main__section-name">По жанрам</h3>
    <div class="main__genres-selection">
        <div class="main__genres-list">
            {{#each genres}}
                <div class="genres-list__item-box" id="{{this.name}}">{{this.name}}</div>
            {{/each}}
            <!-- TEMP -->
            <div class="genres-list__item-box">ужасы</div>
            <div class="genres-list__item-box">драма</div>
            <div class="genres-list__item-box">комедия</div>
            <!-- TEMP -->
            <a href="/movies/genre/1/?filter=" id="main-genre-search-button" class="main__show-button view-all">показать</a>
        </div>
    </div>
</div>
